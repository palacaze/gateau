# This package module is the default module for packages in the SoCute collection.
# It assumes default search strategy and git repository location.

set(@SOCUTE_PACKAGE_MODULE_NAME@_version "master")
if (SOCUTE_CI_USER AND SOCUTE_CI_PASS)
    set(@SOCUTE_PACKAGE_MODULE_NAME@_git "https://${SOCUTE_CI_USER}:$${SOCUTE_CI_PASS}@gitlab.pasnox.com:99/so-cute/@SOCUTE_PACKAGE_REPO_NAME@.git")
else()
    set(@SOCUTE_PACKAGE_MODULE_NAME@_git "ssh://git@gitlab.pasnox.com:9443/so-cute/@SOCUTE_PACKAGE_REPO_NAME@.git")
endif()

macro(pkg_find)
    find_package(@SOCUTE_PACKAGE_MODULE_NAME@ ${ARGN})
endmacro()

macro(pkg_install)
    include(SoCuteExternalPackage)

    socute_external_package(@SOCUTE_PACKAGE_MODULE_NAME@
        CMAKE_ARGS
            "-DSOCUTE_BUILD_TESTS=OFF"
            "-DSOCUTE_BUILD_EXAMPLES=OFF"
            "-DSOCUTE_BUILD_DOC=OFF"
            "-DSOCUTE_CI_USER=${SOCUTE_CI_USER}"
            "-DSOCUTE_CI_PASS=${SOCUTE_CI_USER}"
    )
endmacro()
